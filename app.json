{
  "expo": {
    "name": "AdminIA",
    "slug": "adminIA",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "scheme": "adminIA",
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.adminIA.mobile",
      "buildNumber": "1",
      "infoPlist": {
        "NSCameraUsageDescription": "AdminIA needs camera access to scan documents",
        "NSPhotoLibraryUsageDescription": "AdminIA needs photo library access to upload documents",
        "NSDocumentsFolderUsageDescription": "AdminIA needs access to documents folder to save files",
        "NSMicrophoneUsageDescription": "AdminIA may need microphone access for video recording"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.adminIA.mobile",
      "playStoreUrl": "https://play.google.com/store/apps/details?id=com.adminIA.mobile",
      "versionCode": 1,
      "compileSdkVersion": 34,
      "targetSdkVersion": 34,
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "permissions": [
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE",
        "RECORD_AUDIO",
        "INTERNET",
        "ACCESS_NETWORK_STATE"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "bundler": "metro"
    },
    "plugins": [
      [
        "expo-camera",
        {
          "cameraPermission": "Allow AdminIA to access your camera to scan documents",
          "microphonePermission": "Allow AdminIA to access your microphone for video recording",
          "recordAudioAndroid": true
        }
      ],
      [
        "expo-document-picker"
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "AdminIA needs access to your photos to upload documents"
        }
      ],
      [
        "@stripe/stripe-react-native"
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "adminIA-mobile-app-2025"
      }
    }
  }
}
